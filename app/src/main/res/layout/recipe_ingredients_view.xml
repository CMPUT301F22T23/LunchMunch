<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ListView
        android:id="@+id/ingredient_list"
        android:layout_width="399dp"
        android:layout_height="484dp"
        android:layout_marginTop="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addIngredientsButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:backgroundTint="#E1CFCA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_list"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/RecipeIngredients"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/nunito_extrabold"

        android:text="Ingredients to be Added"
        android:textColor="#323232"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ingredient_list"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:clickable="true"
        app:backgroundTint="#E1CFCA"
        app:layout_constraintStart_toEndOf="@+id/addIngredientsButton"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_list"
        app:srcCompat="@drawable/check" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancel"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="72dp"

        android:layout_marginEnd="88dp"
        android:clickable="true"
        app:backgroundTint="#E1CFCA"
        app:layout_constraintEnd_toStartOf="@+id/addIngredientsButton"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_list"
        app:srcCompat="@drawable/cancel" />


</androidx.constraintlayout.widget.ConstraintLayout>